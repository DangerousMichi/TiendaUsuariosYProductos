<%- include("templates/header") %>
<h1>Editar producto</h1>
<div class="contenedor">
    <form action="/editarProducto" method="post" id="formulario">
        <input type="hidden" value="<%= producto.idproducto %>" name="idproducto" id="idproducto" >
        
        <label for="nombre">Nombre: </label> <span class="errorNombre ocultar">Nombre no válido</span>
        <input type="text" value="<%= producto.nombre %>" class="" autofocus name="nombre" id="nombre" placeholder="Nombre del producto" /><span></span>
        <i class="fa-solid fa-xmark ocultar xmarkErrorNombre correctoInput"></i>
        <i class="fa-solid fa-check checkMarkNombre ocultar"></i>

        <label for="descripcion">Descripción: </label> <span class="errorDescripcion ocultar">Descripción no válida</span>
        <textarea  name="descripcion" id="descripcion" placeholder="Descripción del producto"><%= producto.descripcion %></textarea><span></span>
        <i class="fa-solid ocultar fa-xmark xmarkErrorDescripcion correctoInput"></i>
        <i class="fa-solid fa-check checkMarkDescripcion ocultar"></i>

        <label for="precio">Precio: </label> <span class="errorPrecio ocultar">Precio no válido</span>
        <input value="<%= producto.precio %>" name="precio" id="precio" type="number" step="0.01" placeholder="Precio del producto"><span></span>
        <i class="fa-solid ocultar fa-xmark xmarkErrorPrecio correctoInput"></i>
        <i class="fa-solid fa-check checkMarkPrecio ocultar"></i>

        <label for="stock">Stock: </label> <span class="errorStock ocultar">Stock no válido</span>
        <input value="<%= producto.stock %>" name="stock" id="stock" type="number" placeholder="Stock disponible"><span></span>
        <i class="fa-solid ocultar fa-xmark xmarkErrorStock correctoInput"></i>
        <i class="fa-solid fa-check checkMarkStock ocultar"></i>

        <button type="submit">Editar producto</button>
    </form>
</div>

<%- include("templates/footer") %>

